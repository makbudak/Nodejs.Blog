<section class="page-image page-image-contact md-padding">
    <h1 class="text-white text-center">Yazı Ekle</h1>
</section>

<!--==========================
    Contact Section
============================-->
<section id="contact" class="md-padding">
    <div class="container">

        <div class="row text-center">
            <div class="col-md-4 offset-md-4">
                <div class="section-header">
                    <h2 class="title">Yazı Ekle</h2>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <form action="/post/test" method="POST" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-6 offset-3">
                            <div class="form-group">
                                <input class="form-control" name="title" type="text" placeholder="Başlık *"
                                    required="required" data-validation-required-message="Başlık giriniz.">
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <textarea class="form-control" name="content" placeholder="İçerik *" required="required"
                                    data-validation-required-message="İçerik giriniz."></textarea>
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <input class="form-control" name="post_image" type="file" required="required"
                                    data-validation-required-message="Görsel ekleyiniz.">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-lg-12 text-center">
                            <div id="success"></div>
                            <button class="main-btn" type="submit">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</section>